<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView6"/>
    <TextView
            android:text="Что такое Layk?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_marginLeft="20dp"
            android:layout_marginTop="29dp" android:textSize="18sp" android:textStyle="bold"/>
    <TextView
            android:text="Layk - это брендовая спортивная одежда для тренировок в зале и повседневнного ношения."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp" android:textSize="16sp" android:layout_marginRight="20dp"/>
    <TextView
            android:text="Наша миссия"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp" android:textSize="18sp" android:textStyle="bold"/>
    <TextView
            android:text="Мы предоставляем качественную, стильную, а главное удобную продукцию которая поможет поднять эффективность и комфорт при занятии спортом, а так же чувствовать себя стильно просто выходя из дома."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:textSize="16sp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/item_imageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="item_avatar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_width="120dp"
            android:layout_marginBottom="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_name"
            app:layout_constraintStart_toEndOf="@+id/item_imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textStyle="bold" android:textSize="17sp" android:text="Загрузка"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_code"
            app:layout_constraintTop_toBottomOf="@+id/item_name" android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/item_imageView" android:textSize="13sp" android:text="Загрузка"
            android:textColor="#aaaaaa"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_details_1" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/item_code"
            app:layout_constraintStart_toEndOf="@+id/item_imageView"
            android:text="Загрузка"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_details_2" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/item_details_1"
            app:layout_constraintStart_toEndOf="@+id/item_imageView"
            android:text="Загрузка"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_details_3" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/item_details_2"
            app:layout_constraintStart_toEndOf="@+id/item_imageView" android:text="Подробнее.."
            android:textColor="@color/More..."/>
    <TextView
            android:layout_width="68dp"
            android:layout_height="0dp"
            android:id="@+id/item_price"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp"
            android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/item_imageView"
            android:layout_marginBottom="20dp" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/item_details_3" android:text="Загрузка"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_availability" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            android:textColor="@color/colorAccent" android:text="Загрузка"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:linksClickable="true"
            android:autoLink="web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mediaTitleTextView" android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:textSize="26sp" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:linksClickable="true"
            android:autoLink="web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mediaBodyTextView" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" android:layout_marginBottom="12dp" android:textSize="19sp"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="215dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" app:cardCornerRadius="@dimen/activity_horizontal_margin"
            android:id="@+id/mediaCardImageView">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/mediaImageView"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
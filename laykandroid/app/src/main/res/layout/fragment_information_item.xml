<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/information_item_imageView"
            android:layout_marginLeft="16dp" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/information_item_textView" android:textSize="17sp"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp" android:layout_marginLeft="8dp"
            android:layout_gravity="center"/>
</LinearLayout>
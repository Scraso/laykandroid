<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="587dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/scrollView2"
            android:background="@android:color/white">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="420dp">
                <androidx.viewpager.widget.ViewPager
                        android:layout_width="wrap_content"
                        android:layout_height="416dp"
                        android:id="@+id/imagePager">
                </androidx.viewpager.widget.ViewPager>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="Загрузка..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/itemName"
                    tools:layout_editor_absoluteY="385dp" tools:layout_editor_absoluteX="176dp"
                    android:layout_gravity="center" android:layout_marginTop="20dp" android:textSize="18sp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Загрузка..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/itemPrice" android:layout_gravity="center"
                    android:layout_marginTop="10dp" android:textSize="18sp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/separator" android:background="#e3e3e5"
                    android:layout_marginTop="20dp" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
            <TextView
                    android:text="Подробности"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/More" android:layout_gravity="center"
                    android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="Загрузка..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/itemDetails_1" android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:textSize="17sp"
                    android:textAlignment="textStart" android:layout_gravity="center"/>
            <TextView
                    android:text="Загрузка..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/itemDetails_2" android:layout_marginTop="4dp"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:textSize="17sp"
                    android:layout_gravity="center" android:textAlignment="viewStart"/>
            <TextView
                    android:text="Загрузка..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/itemDetails_3" android:layout_marginTop="4dp"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:textSize="17sp"
                    android:layout_gravity="center" android:textAlignment="viewStart"/>
            <TextView
                    android:text="Размер"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_marginTop="30dp"
                    android:textSize="18sp" android:textStyle="bold" android:layout_gravity="center"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp" android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" android:layout_gravity="center" android:padding="5dp">

                <Button
                        android:text="XS"
                        android:layout_width="44dp"
                        android:background="@drawable/button_size_background" android:textSize="15sp"
                        android:textColor="#007aff"
                        android:layout_height="44dp" android:id="@+id/XSBtn"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>

                <Button
                        android:text="S"
                        android:layout_width="44dp"
                        android:layout_height="44dp" android:id="@+id/SBtn"
                        android:background="@drawable/button_size_background" android:textSize="15sp"
                        android:textColor="#007aff"/>

                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>

                <Button
                        android:text="M"
                        android:layout_width="44dp"
                        android:layout_height="44dp" android:id="@+id/MBtn"
                        android:background="@drawable/button_size_background" android:textSize="15sp"
                        android:textColor="#007aff"/>

                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>

                <Button
                        android:text="L"
                        android:layout_width="44dp"
                        android:layout_height="44dp" android:id="@+id/LBtn"
                        android:background="@drawable/button_size_background" android:textSize="15sp"
                        android:textColor="#007aff"/>

                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>

                <Button
                        android:text="XL"
                        android:layout_width="44dp"
                        android:layout_height="44dp" android:id="@+id/XLBtn"
                        android:background="@drawable/button_size_background" android:textSize="15sp"
                        android:textColor="#007aff"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp"
            android:id="@+id/addToCartBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:focusable="true" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
            android:layout_margin="@dimen/fab_margin"/>
</androidx.constraintlayout.widget.ConstraintLayout>
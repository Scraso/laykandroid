<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="228dp" android:layout_marginLeft="20dp" android:layout_marginTop="50dp"
            android:layout_marginRight="55dp" app:cardCornerRadius="@dimen/activity_horizontal_margin">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/quote_begin"
                android:id="@+id/imageView4" android:layout_marginLeft="16dp" android:layout_marginTop="20dp"/>
        <TextView
                android:text="Покупала лосины через инстаграм. Лосины приехали на следующий день. Очень довольна ценой и качеством, рекомендую!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/commentTextView" android:layout_marginTop="20dp"
                android:layout_marginRight="20dp" android:layout_marginLeft="54dp" android:textSize="18sp"
                android:textColor="@color/DarkGrayIOS"/>
        <androidx.cardview.widget.CardView
                android:layout_width="24dp"
                android:layout_height="24dp" android:layout_marginBottom="20dp" android:layout_marginLeft="16dp"
                android:layout_gravity="bottom" app:cardCornerRadius="12dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/avatarImageView" android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <TextView
                android:text="Яна Куницкая"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameTextView"
                android:layout_gravity="bottom|left|end"
                android:layout_marginBottom="22dp" android:layout_marginRight="20dp" android:layout_marginLeft="50dp"
                android:textColor="@color/DarkGrayIOS"/>
        <ImageView
                android:layout_width="12dp"
                android:layout_height="9dp" app:srcCompat="@drawable/quote_end" android:id="@+id/imageView7"
                android:layout_gravity="bottom|right" android:layout_marginRight="7dp"
                android:layout_marginBottom="64dp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>